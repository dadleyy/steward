{
  "name": "Steward",
  "description" : "Pull request template manager",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": [
    "webNavigation"
  ],
  "browser_action": {
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["background-scripts/worker.js"],
    "persistent": false
  },
 "content_scripts": [{
   "matches": ["https://*.github.com/*", "https://github.com/*"],
   "js": ["content-scripts/worker.js"]
 }]
}
